<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Views">
	<description>Yii 2 Web Application Framework Coding Standard</description>

	<rule ref="../Application/ruleset.xml">
		<exclude name="Generic.WhiteSpace.ScopeIndent"/>
		<exclude name="Squiz.WhiteSpace.ScopeClosingBrace.Indent"/>
		<!-- disabled because of alternate syntax -->
		<exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterCloseParenthesis"/>
		<exclude name="Squiz.ControlStructures.ControlSignature.SpaceAfterKeyword"/>

		<!-- multiple echos on a single line are allowed -->
		<exclude name="Generic.Formatting.DisallowMultipleStatements.SameLine"/>
	</rule>

	<!-- View files might not contain php code. Disable the warning on installations without short open tags -->
	<rule ref="Internal.NoCodeFound">
		<severity>0</severity>
	</rule>
</ruleset>
